<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReportIncidentActivity" >

    <TextView
        android:id="@+id/activity_report_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_header" />

    <requestFocus />

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_status"
        android:layout_below="@+id/activity_report_header"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="date" 
        android:editable="false"
        />

    <EditText
        android:id="@+id/editText_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_status"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:inputType="time" 
        android:editable="false"
        />

    <EditText
        android:id="@+id/editText_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_date"
        android:layout_below="@+id/editText_date"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="@string/location" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_location"
        android:layout_below="@+id/editText_location"
        android:layout_marginTop="26dp"
        android:ems="10" 
        android:text="@string/desc" 
        />

    <Button
        android:id="@+id/button_submitReport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_description"
        android:layout_marginTop="69dp"
        android:text="@string/submit"
        android:onClick="submitReport" 
       />

    <EditText
        android:id="@+id/editText_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_submitReport"
        android:layout_below="@+id/button_submitReport"
        android:layout_marginTop="49dp"
        android:ems="10" />
  
</RelativeLayout>