<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MediaActivity" >

    <requestFocus />

         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/ic_launcher"
             android:textSize="18sp"
             android:textStyle="bold" />

            <Button
                android:id="@+id/Return"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:onClick="returnToSubmit"
                android:paddingLeft="0dp"
                android:text="@string/returnToSubmit"
                android:textSize="18sp"
                android:textStyle="bold" />

             <Button
                 android:id="@+id/button2"
                 android:layout_width="50dp"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@+id/button3"
                 android:layout_alignLeft="@+id/imageView1"
                 android:layout_alignRight="@+id/recordButton"
                 android:onClick="stop"
                 android:text="@string/stop"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <Button
                 android:id="@+id/Picture3"
                 android:layout_width="60dp"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/imageView1"
                 android:layout_below="@+id/imageView1"
                 android:layout_marginTop="15dp"
                 android:gravity="center"
                 android:onClick="takePicture"
                 android:paddingLeft="0dp"
                 android:text="pic 3"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <Button
                 android:id="@+id/Picture2"
                 android:layout_width="60dp"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/Picture3"
                 android:layout_alignBottom="@+id/Picture3"
                 android:layout_alignLeft="@+id/imageView3"
                 android:gravity="center"
                 android:onClick="takePicture"
                 android:paddingLeft="0dp"
                 android:text="pic 2"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <Button
                 android:id="@+id/Picture1"
                 android:layout_width="60dp"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/Picture2"
                 android:layout_alignBottom="@+id/Picture2"
                 android:layout_alignLeft="@+id/imageView2"
                 android:gravity="center"
                 android:onClick="takePicture"
                 android:paddingLeft="0dp"
                 android:text="pic 1"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <Button
                 android:id="@+id/button3"
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/button1"
                 android:layout_alignBottom="@+id/button1"
                 android:layout_centerHorizontal="true"
                 android:onClick="play"
                 android:text="@string/play"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <ImageView
                 android:id="@+id/imageView4"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_above="@+id/button3"
                 android:layout_centerHorizontal="true"
                 android:scaleType="fitXY"
                 android:src="@drawable/mike" />

             <ImageView
                 android:id="@+id/imageView3"
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:layout_alignRight="@+id/button3"
                 android:layout_alignTop="@+id/imageView2"
                 android:src="@drawable/ic_launcher"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:layout_alignRight="@+id/recordButton"
                 android:layout_alignTop="@+id/imageView3"
                 android:src="@drawable/ic_launcher"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/Picture1"
                 android:layout_below="@+id/Picture2"
                 android:layout_marginTop="23dp"
                 android:gravity="center"
                 android:text="@string/Recording"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/textView1"
                 android:layout_alignBottom="@+id/textView1"
                 android:layout_alignLeft="@+id/imageView4"
                 android:layout_alignRight="@+id/Picture3"
                 android:layout_marginLeft="20dp"
                 android:text="TextView" />

             <Button
                 android:id="@+id/button1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/textView1"
                 android:layout_below="@+id/textView1"
                 android:layout_marginTop="45dp"
                 android:onClick="start"
                 android:text="@string/start"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <Button
                 android:id="@+id/recordButton"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/button1"
                 android:layout_below="@+id/button2"
                 android:layout_marginTop="17dp"
                 android:onClick="startRecording"
                 android:text="@string/button_video"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/recordButton"
                 android:layout_below="@+id/recordButton"
                 android:layout_marginLeft="21dp"
                 android:layout_marginTop="17dp"
                 android:text="TextView" />
    
</RelativeLayout>