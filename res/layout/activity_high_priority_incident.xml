<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReportIncidentActivity" >

    <requestFocus />

    <EditText
        android:id="@+id/locationGPS_lat"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:editable="false"
        android:ems="10"
        android:hint="@string/location_gps"
        android:text="lat" />

    <EditText
        android:id="@+id/editText_currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationGPS_lat"
        android:layout_below="@+id/locationGPS_lat"
        android:editable="false"
        android:ems="10"
        android:hint="@string/time" />

    <EditText
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_currentTime"
        android:layout_below="@+id/editText_currentTime"
        android:ems="10"
        android:hint="@string/location_human"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/location"
        android:layout_below="@+id/location"
        android:ems="10"
        android:hint="@string/desc"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:onClick="submitReport"
        android:text="submit report" />

    <EditText
        android:id="@+id/locationGPS_long"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/locationGPS_lat"
        android:editable="false"
        android:ems="10"
        android:hint="@string/location_gps"
        android:text="long" />

</RelativeLayout>